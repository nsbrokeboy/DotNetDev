@using Microsoft.AspNetCore.Http.Extensions
@model PizzaDelivery.Models.Pizza

@{
    ViewBag.Title = Model.Name;
    Layout = "_Layout";
}
<br>
<h2>@Model.Name</h2>
<br>
<img src="../imgs/@{@Model.Id}.jpeg" width="292" height="292">
<p>@Model.Description</p>
<p>@Model.Weight г.</p>
<h3>
    <span class="badge rounded-pill bg-warning text-dark">@Model.Cost ₽</span>
</h3>

<a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.Id" asp-route-url="@Context.Request.GetEncodedUrl()">
    <button type="button" class="btn btn-warning">В корзину</button>
</a>

