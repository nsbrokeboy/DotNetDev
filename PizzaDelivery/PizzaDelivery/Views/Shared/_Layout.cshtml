<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Pizzza</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>

@* <style> *@
@*     .a-for-layout{ *@
@*         color:#ffffff; *@
@*         text-decoration:none !important;  *@
@*         margin-right: 30px; *@
@*     } *@
@* </style> *@

<body>
<header class="p-2 bg-dark text-white">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
            <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none docs-creator">
                <img src="../icons/pizza.svg" class="bi me-2" width="50" height="44" role="img" aria-label="Bootstrap" alt="pizza">
            </a>
            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                <li><a asp-controller="Home" asp-action="Index" class="nav-link px-2 text-white docs-creator">Главная</a></li>
                <li><a asp-controller="Catalog" asp-action="AllProducts" class="nav-link px-2 text-white docs-creator">Каталог</a></li>
            </ul>
           
            
            <div class="text-end">
                @{
                    if (User.Identity.IsAuthenticated)
                    {
                        <a style="color:#ffffff; text-decoration:none; margin-right: 30px;" asp-controller="Cart" asp-action="Cart">Корзина </a>
                        <a style="color:#ffffff; text-decoration:none; margin-right: 30px;" asp-controller="Account" asp-action="Account">Профиль</a>
                        <a asp-controller="Account" asp-action="Logout"><button type="button" class="btn btn-outline-light me-2">Выйти</button></a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login"><button type="button" class="btn btn-outline-light me-2">Войти</button></a>
                        <a asp-controller="Account" asp-action="Register"><button type="button" class="btn btn-warning">Зарегистрироваться</button></a> 
                    }
                }
            </div>
        </div>
    </div>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2021 - PizzaDelivery
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>